generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model NFTTransaction {
  id                 Int      @id @default(autoincrement())
  nftId              String
  fromAddress        String
  toAddress          String
  price              String
  transactionType    String   // "buy" or "sell"
  transactionHash    String   @unique
  timestamp          DateTime @default(now())
  NFTMinting         NFTMinting @relation(fields: [nftId], references: [nftId])
}



model NFTMinting{
  id Int @id @default(autoincrement())
  nftId String @unique
  nftName String
  nftDescription String
  nftImage String
  nftPrice String
  nftOwnerAddress String
  nftCreatorAddress String
  nftStatus String
  nftCreatedAt DateTime @default(now())
  nftUpdatedAt DateTime @default(now())
  collectionName String?
  predicateEntries  predicateEntry[]
  NFTTransactions NFTTransaction[]
}


model predicateEntry {
  id  Int @id @default(autoincrement())
  sellerId String 
  predicateId String @unique
  nftId String 
  config Json
  status String @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  NFTMinting NFTMinting @relation(fields: [nftId], references: [nftId])
}
